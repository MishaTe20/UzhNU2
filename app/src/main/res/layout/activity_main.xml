<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mishate.uznuintime.com.example.mishate.InTime.MainActivity"
    android:background="@android:color/background_light">

    <Button
        android:text="Викладач"
        android:layout_width="265dp"
        android:onClick="onClick"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_btn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:minHeight="50dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.90999997" />

    <Button
        android:text="Студент"
        android:layout_height="wrap_content"
        android:onClick="onClick1"
        android:id="@+id/button2"
        android:minHeight="50dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/teacher_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="265dp" />

    <ImageView
        android:layout_width="345dp"
        android:layout_height="285dp"
        app:srcCompat="@drawable/uzhnu_logo"
        android:id="@+id/imageView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
